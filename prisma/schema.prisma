// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id         Int      @id @default(autoincrement())
  title      String   @db.VarChar(255)
  text       String   @db.Text
  filename   String   @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  location    User              @relation(fields: [location_id], references: [vkid])
  location_id String
  categories  ItemRelCategory[]
  Course       Course[]
  @@map("items")
}

model Category {
  id         Int      @id @default(autoincrement())
  title      String   @db.VarChar(255)
  descr      String   @db.Text
  color      String   @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  items ItemRelCategory[]

  @@map("category")
}

model ItemRelCategory {
  item        Item     @relation(fields: [item_id], references: [id])
  item_id     Int
  category    Category @relation(fields: [category_id], references: [id])
  category_id Int

  @@id([item_id, category_id])
  @@map("itemstocat")
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @db.VarChar(255)
  vkid       String    @unique @db.VarChar(255)
  password   String    @db.Text
  Phone      String
  Gender     Int
  Info       String    @db.Text
  Emoji      String    @db.VarChar(255)
  date       String    @db.VarChar(255)
  private    String    @db.VarChar(255)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  Message    Message[]
  Item       Item[]
  Balance    Int
  Operations Operation[]
  @@map("users")
}

model Message {
  id         Int      @id @default(autoincrement())
  text       String   @db.Text
  team       Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  User       User     @relation(fields: [user_id], references: [vkid])
  user_id    String   @db.VarChar(255)
  recipient  String   @db.VarChar(255)

  @@map("msg")
}

model Offer {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  text        String   @db.Text
  filename    String   @db.VarChar(255)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
  author      String   @db.VarChar(255)

  @@map("offers")
}
model Step {
  id	      Int      @id @default(autoincrement())
  item_id     Int
  Number      Int
  Course	      Course     @relation(fields: [item_id], references: [id])
  Name        String   @db.VarChar(255)
  Text	      String   @db.Text
  Image       String   @db.VarChar(255)
  Material    String   @db.VarChar(255)

  @@map("steps")
}
model Course {
  id	      Int      @id @default(autoincrement())
  Steps Step[]
  item_id   Int
  Item      Item     @relation(fields: [item_id], references: [id])
  Color     String   @db.VarChar(255)
  Price     Int
}
model Operation {
  id	      Int      @id @default(autoincrement())
  type      String   @db.VarChar(255)
  summ      Int
  from      Int
  From      User    @relation(fields: [from], references: [id])
  to        Int
}