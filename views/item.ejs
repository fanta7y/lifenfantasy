<%- include('../particle/header.ejs') %>
<a href="/">
    <img class="back-arrow" src="/img/back-arrow.png">
</a>    
<div class="area">
        <h1><%= Items[0].title %></h1>
        <h4>by <a href="/page/<%=Items[0].location_id%>"><%=Items[0].location_id%></a></h4>
        <span id="content"></span>
        <script> 
        let array = JSON.parse('<%- JSON.stringify(thisa) %>');
        for(let i = 0; i < '<%=thisa.length%>'; i++){
            let content = document.getElementById('content');
            let h3 = document.createElement('h3');
            h3.classList.add('section__category');
            h3.style.backgroundColor = array[i].color;
            h3.innerText = array[i].title;

            content.appendChild(h3);
        }
            </script>

    
        <p><%= Items[0].text %></p>
    </div>
    <img src="/uploads/<%= Items[0].filename %>" alt="/" class="plusimg">
    <%console.log(vkid);%>
    <% if(admin == promocode || Items[0].location_id == vkid) { %>
        <form action="/update" method="POST">
            <input value="<%= Items[0].id %>" type="hidden" name="id"><br>
            Название <br>
            <input value="<%= Items[0].title %>" placeholder="Что у вас за картинка?" type="text" name="title"> <br>
            Текст <br>
            <textarea name="text" id="textarea"><%= Items[0].text %></textarea> <br>
            <button type="submit" class="pla">Изменить</button>
        </form>
        <a href="/catto/<%=params%>">Добавить категорию</a>
    <%}%>
    <% if (Items[0].location_id == vkid) { %>
        <a href="/create/<%=params%>">Редактировать курс (пошаговый конспект)</a>
    <%}%>
